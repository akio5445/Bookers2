<div class="container-fluid">
  <div class="row">
      
    <div class="col-2 offset-md-2">
      <div class="container pt-3"><h1>User info</h1></div> 
      
      <table class="table">
        <tr><th><%= attachment_image_tag @user, :profile_image, :fill, 70, 70, format: 'jpg', fallback: "no_image.jpg" %></th></tr>
        <tr><th><div class="container">
        <p>name</p>
        <%= @user.name %>
        </div></th></tr>
        <tr><th><div class="container">
        <p>introduction</p>
        <%= @user.introduction %>
        </div></th></tr>
        <tr><th><button type="button" class="btn btn-outline-primary">
        
        <% if @user.id == current_user.id %>
          <%= link_to 'EDIT', edit_user_path(@user) %>
          <% else %>
          <%= link_to 'EDIT', user_path(current_user.id) %>>
        <% end %>
        
        
        
        </button></th></tr>
      </table>


      <div class="container"><h2>New book</h2></div>
      <%= render 'users/form', book:@book %>
    </div>

    <div class="col-6">
      <div class="container pt-4"><h2>Books<h2></div>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td><div class="container">
              <%= link_to attachment_image_tag( @user, :profile_image, :fill, 75, 75, format: 'jpg', fallback: "no_image.jpg"), user_path(@user) %>
            </div></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="offset-md-2"></div>

  </div>
</div>